{
  "compilerOptions": {
    "sourceMap": false,
    "target": "ES2020",
    "module": "ES2015",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "tests/*.test.ts"]
}
